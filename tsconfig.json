{
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "target": "es5",
    "lib": ["es6", "dom"],
    "types": ["reflect-metadata"],
    "module": "esnext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@": ["src"],
      "@/*": ["src/*"],
      "~": ["."],
      "~/*": ["./*"],
    }
  }
}